<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">

    <a class="navbar-brand" href="/urls">TinyApp</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
      <div style="font-size: 25px;">Logged in as: <%= user.email %>
      </div>
          <form action="/logout" method="POST" style="padding-left: 50px;">
            <button type="submit" class="btn btn-outline-warning">Log out</button>
          </form>
      <% } else { %>
        <form class="form-inline" method="get" action="/login">
          <button type="submit" class="btn btn-outline-dark">Log in</button>
        </form>
        <div style="margin-left: 20px;">
          <form action="/register" method="GET">
            <button type="submit" class="btn btn-outline-primary">Register</button>
          </form>
        </div>
        <% } %>


  </nav>
</header>